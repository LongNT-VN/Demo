						</div>


					</div>
					<!-- end content tabs -->
				</div>

				<!-- sidebar -->
				<div class="col-12 col-lg-4 col-xl-4">
					<div class="row">
						<!-- section title -->
						<div class="col-12">
							<h2 class="section__title section__title--sidebar">You may also like...</h2>
						</div>
						<!-- end section title -->

						
						<% recMovies.forEach(movie => { %>
						<!-- card -->
						<div class="col-6 col-sm-4 col-lg-6">
							<%- include('components/home/normalCard') %>
